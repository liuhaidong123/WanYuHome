<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/popbottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:id="@+id/relativeLayout">
        <EditText
            android:maxLength="10"
            android:hint="输入自定义名字"
            android:textColor="@color/titlecolor3"
            android:gravity="center"
            android:textSize="@dimen/textSize14"
            android:id="@+id/activity_my_house_family_add_msmCode_p"
            android:background="@drawable/edileft"
            android:layout_alignParentLeft="true"
            android:layout_width="200dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="确定"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/textSize14"
            android:background="@drawable/editrighe"
            android:id="@+id/activity_my_house_family_add_getSmSCode_p"
            android:layout_toRightOf="@+id/activity_my_house_family_add_msmCode_p"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>