<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/cha_title"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/money_cha_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/money_cha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/submit_sure_tv"
                android:textColor="@color/title_color"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:id="@+id/cha_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cha_title"
            android:background="@color/repair_line" />

        <TextView
            android:id="@+id/select_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/cha_line1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/submit_select_tv"
            android:textColor="@color/name_color"
            android:textSize="15sp" />

        <View
            android:id="@+id/cha_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/select_tv"
            android:background="@color/repair_line" />

        <RelativeLayout
            android:id="@+id/select_zhifubao_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/cha_line2">

            <ImageView
                android:id="@+id/zhifubao_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/zifubao_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/zhifubao_img"
                android:text="@string/submit_select_zhifubao"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/select_zhifubao_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/money_select_no" />
        </RelativeLayout>

        <View
            android:id="@+id/cha_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/select_zhifubao_rl"
            android:background="@color/repair_line" />

        <RelativeLayout
            android:id="@+id/select_weixin_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/cha_line3">

            <ImageView
                android:id="@+id/weixin_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/weixin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/weixin_img"
                android:text="@string/submit_select_weixin"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/select_weixin_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/money_select_no" />
        </RelativeLayout>

        <View
            android:id="@+id/cha_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/select_weixin_rl"
            android:background="@color/repair_line" />

        <Button
            android:id="@+id/submit_money_alert"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_below="@id/cha_line4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/repair_submit_bg"
            android:text="@string/input_money_submit"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>