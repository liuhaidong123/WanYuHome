<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.home.wanyu.myview.RoundImageView
        android:src="@mipmap/it3"
        android:id="@+id/card_pool_photo"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/card_pool_photo"
        android:layout_width="match_parent"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content">
        <com.home.wanyu.lzhView.MyVi
            android:layout_width="10dp"
            android:layout_height="20dp" />
        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/messagetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/carpool"
                android:textColor="@color/titlecolor3"
                android:textSize="@dimen/textSize15"
                android:id="@+id/carpool_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="@string/carpool_phone"
                android:textColor="@color/titlecolor3"
                android:textSize="@dimen/textSize15"
                android:layout_below="@+id/carpool_message"
                android:id="@+id/carpool_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>