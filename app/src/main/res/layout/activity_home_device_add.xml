<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_device_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.home.wanyu.activity.HomeDeviceAddActivity">
    <TextView
        android:id="@+id/activity_home_device_add_fg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       >
        <TextView
            android:id="@+id/activity_home_device_add_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize13"
            android:text="扫描二维码"
            android:layout_centerHorizontal="true"
            android:textColor="@color/titlecolor3"/>
    </RelativeLayout>
</RelativeLayout>
