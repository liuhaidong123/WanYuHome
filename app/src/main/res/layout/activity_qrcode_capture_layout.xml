<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/capture_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:background="#ef262826">
        <ImageView
            android:id="@+id/capture_titleImage"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:clickable="true"
            android:onClick="Return"
            android:paddingRight="15dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/return2"/>
        <TextView
            android:id="@+id/myActivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/capture_titleImage"
            android:layout_centerVertical="true"
            android:text="添加设备"
            android:textColor="#f4ffffff"
            android:textSize="17sp"/>
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/homefragmentFgColor"/>-->
    </RelativeLayout>
    <FrameLayout
        android:layout_below="@+id/capture_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/preview_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <com.home.wanyu.zxing.view.ViewfinderView
                android:id="@+id/viewfinder_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>