<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textColor="@color/titlecolor3"
                android:text="风向调节"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize12"/>
            <TextView
                android:id="@+id/air_setting_winddir_cancle"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textSize="@dimen/textSize12"
                android:textColor="@color/color9"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/homefragmentFgbac"/>

        <!--自动-->
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ari_winddirect_auto"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="自动"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/homefragmentFgbac"/>
        <!--上下风-->
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ari_winddirect_topAndBottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="上下风"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/homefragmentFgbac"/>
        <!--左右风-->
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ari_winddirect_leftAndRight"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="左右风"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></TextView>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/homefragmentFgbac"/>
    </LinearLayout>

</RelativeLayout>