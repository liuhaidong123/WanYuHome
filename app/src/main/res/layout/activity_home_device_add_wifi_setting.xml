<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_device_add_wifi_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.home.wanyu.activity.HomeDeviceAddWifiSettingActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="25dp">
                <!--情景名称-->
                <RelativeLayout
                    android:id="@+id/home_deviceWifi_setting_rela_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/home_deviceWifi_setting_rela_textv"
                        android:textSize="@dimen/textSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/titlecolor3"
                        android:text="设 备 名 称"/>
                    <EditText
                        android:id="@+id/home_deviceWifi_setting_rela_eidtext"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:maxLines="1"
                        android:text="灯"
                        android:layout_centerVertical="true"
                        android:textColor="@color/titlecolor3"
                        android:textSize="@dimen/textSize14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/activity_homescene_editext"
                        android:layout_toRightOf="@+id/home_deviceWifi_setting_rela_textv"/>
                </RelativeLayout>

                <!--启动条件-->
                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/home_deviceWifi_setting_rela_name"
                    android:id="@+id/home_sence_scene_rela_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/home_deviceWifi_setting_rela_condition_textv"
                        android:textSize="@dimen/textSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/titlecolor3"
                        android:text="所 属 房 间"/>
                    <RelativeLayout
                        android:id="@+id/home_deviceWifi_setting_rela_condition_relaLayout"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/home_deviceWifi_setting_rela_condition_textv"
                        android:background="@drawable/activity_homescene_editext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/home_deviceWifi_setting_rela_condition_guishu"
                            android:text="客厅"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:maxLines="1"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/home_deviceWifi_setting_rela_condition_imageselect"
                            android:layout_centerVertical="true"
                            android:textColor="@color/titlecolor3"
                            android:textSize="@dimen/textSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <ImageView
                            android:id="@+id/home_deviceWifi_setting_rela_condition_imageselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/activity_homescene_imageselect"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:text="选 择 图 标"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/titlecolor3"
                    android:textSize="@dimen/textSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.home.wanyu.myview.MyGridView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:numColumns="4"
                    android:verticalSpacing="1dp"
                    android:horizontalSpacing="1dp"
                    android:background="#e9e9e9"
                    android:id="@+id/home_deviceWifi_setting_gridview">
                </com.home.wanyu.myview.MyGridView>
                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/home_deviceWifi_setting_bottomlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp">
                    <TextView
                        android:id="@+id/activity_homescene_deviceWifi_setting_submit"
                        android:clickable="true"
                        android:textSize="17sp"
                        android:text="确定"
                        android:layout_centerInParent="true"
                        android:background="@drawable/activity_homescene_setting_submit"
                        android:textColor="@color/white"
                        android:layout_width="190dp"
                        android:gravity="center"
                        android:layout_height="44dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
