<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fragment_home_scene_viewpager_listitem_toplayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/fragment_home_scene_viewpager_listitem_imageSettings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/setting"/>
        <TextView
            android:id="@+id/fragment_home_scene_viewpager_listitem_textVsetting"
            android:layout_centerVertical="true"
            android:text="情景设置"
            android:textColor="@color/homeFragChangeColor"
            android:textSize="@dimen/textSize13"
            android:layout_toRightOf="@+id/fragment_home_scene_viewpager_listitem_imageSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <com.home.wanyu.lzhView.SwitchButton
                android:id="@+id/fragment_home_scene_viewpager_listitem_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:backgroundTint="#000000"
                />
    </RelativeLayout>
</LinearLayout>