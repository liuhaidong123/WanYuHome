<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/l"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/homefragmentFgColor"
        android:paddingBottom="1dp">
        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/lockShare_title"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titlecolor3"
                android:text="选择钥匙开启时间"
                android:textSize="@dimen/textSize15"
                android:layout_centerVertical="true"
                />
            <TextView
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/themColor"
                android:textSize="@dimen/textSize15"
                android:text="确定"
                android:id="@+id/lockShare_submits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"/>
        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_below="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.home.wanyu.lzhView.wheelView.WheelView
                    android:id="@+id/pop_lockshare_wheelViewMonth"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    />
                <com.home.wanyu.lzhView.wheelView.WheelView
                    android:id="@+id/pop_lockshare_wheelViewHour"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />
                <com.home.wanyu.lzhView.wheelView.WheelView
                    android:id="@+id/pop_lockshare_wheelViewMinute"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </RelativeLayout>

</RelativeLayout>