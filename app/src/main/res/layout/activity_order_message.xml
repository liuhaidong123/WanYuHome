<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    tools:context="com.home.wanyu.activity.OrderMessageActivity">

    <RelativeLayout
        android:id="@+id/order_msg_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/order_msg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@mipmap/property_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/property_order"
            android:textColor="@color/title_color"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_msg_address_rl"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@id/order_msg_title"
        android:layout_marginTop="1dp"
        android:background="@mipmap/order_address_bgpng">

        <ImageView
            android:id="@+id/hourse_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/order_address" />

        <RelativeLayout
            android:id="@+id/address_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/hourse_img">

            <TextView
                android:id="@+id/order_msg_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/order_address_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_msg_pro"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/order_click_right_white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/two_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/order_msg_address_rl"
        android:layout_marginTop="1dp"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/order_year_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/order_year_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/eac6"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_nian_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="@color/eac6"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/order_year_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/order_click_down_blue" />
            </LinearLayout>

            <View
                android:id="@+id/year_view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/c2a5" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="48dp"
            android:background="@color/eeeeee" />

        <LinearLayout
            android:id="@+id/order_month_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/order_month_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_yue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月份"
                    android:textColor="@color/title_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/order_month_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/bottom_back" />

            </LinearLayout>

            <View
                android:id="@+id/month_view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/order_my_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/two_ll"
        android:layout_marginTop="20dp"
        android:background="@drawable/order_rl_bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c2a5" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_submit"
        android:layout_below="@id/order_my_rl"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.home.wanyu.myview.MyListView
                android:id="@+id/order_msg_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/homefragmentFgbac"
                android:dividerHeight="1dp"
                android:scrollbars="none">

            </com.home.wanyu.myview.MyListView>


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@id/add_submit"
        android:layout_width="335dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/order_select_btn"
        android:text="@string/order_lookup"
        android:textColor="@color/eac6"
        android:textSize="15sp" />


</RelativeLayout>
