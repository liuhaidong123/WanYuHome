<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#0000feae"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/c_homescene_gridViewItem_layout"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/c_homescene_griditem">
        <com.home.wanyu.myview.RoundImageView
            android:id="@+id/c_homescene_gridViewItem_image"
            android:layout_width="56dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/addq"
            android:layout_height="56dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="添加"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/c_homescene_gridViewItem_textView"
            android:layout_toRightOf="@+id/c_homescene_gridViewItem_image"/>
    </RelativeLayout>
</LinearLayout>