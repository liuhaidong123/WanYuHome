<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="119.5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/order_delete_alert"
       >

        <TextView
            android:id="@+id/order_delete_prompt"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:text="@string/order_sure_delete_address"
            android:textColor="#666666"
            android:textSize="15sp" />


        <View
            android:id="@+id/order_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/order_delete_prompt"
            android:background="@color/e5e5e5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/order_line">

            <TextView
                android:id="@+id/update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/e5e5e5" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/update"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/eac6"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>