<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_setting_c__lock_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homefragmentFgColor"
    tools:context="com.home.wanyu.activity.DeviceSettingC_LockShareActivity">
    <include
        android:id="@+id/lockShare_include"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/activity_titleinclude_btn">
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lockShare_include">
        <ScrollView
            android:layout_above="@+id/lockShare_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lockShare_text_top"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="分享给"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/titlecolor3"
                    android:textSize="@dimen/textSize14"
                    />
                <com.home.wanyu.myview.MyListView
                    android:scrollbars="none"
                    android:dividerHeight="10dp"
                    android:divider="@null"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/lockShare_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.home.wanyu.myview.MyListView>
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/lockShare_text_time"
                        android:textColor="@color/titlecolor3"
                        android:textSize="@dimen/textSize12"
                        android:text="钥匙时限"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_toRightOf="@+id/lockShare_text_time"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--开始时间-->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/lock_layout">
                            <TextView
                                android:id="@+id/lockShare_textv_startTime"
                                android:text=""
                                android:hint="开启时间"
                                android:textColorHint="@color/titlecolor3"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/titlecolor3"
                                android:textSize="@dimen/textSize15"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="7dp"
                            android:paddingLeft="7dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="17sp"
                            android:textColor="#9096a3"
                            android:text="一"/>
                        <!--结束时间-->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/lock_layout">
                            <TextView
                                android:id="@+id/lockShare_textv_endTime"
                                android:text=""
                                android:hint="关闭时间"
                                android:textColorHint="@color/titlecolor3"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/titlecolor3"
                                android:textSize="@dimen/textSize15"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:gravity="center"
            android:id="@+id/lockShare_submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="确定"
            android:layout_alignParentBottom="true"
            android:background="@drawable/c_textbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </RelativeLayout>
</RelativeLayout>
