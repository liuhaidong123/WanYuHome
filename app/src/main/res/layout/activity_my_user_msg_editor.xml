<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_user_msg_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.home.wanyu.activity.MyUserMsgEditorActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgColor"/>
    <RelativeLayout
        android:id="@+id/activity_my_user_msg_editor_ChangeImage"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.home.wanyu.myview.RoundImageView
            android:id="@+id/activity_my_user_msg_editor_image"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/it3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            />
        <TextView
            android:text="更换头像"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:textColor="@color/color6a"
            android:id="@+id/te"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_my_user_msg_editor_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="用户名"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:textColor="@color/color6a"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/activity_my_user_msg_editor_ChangeImage"
        android:background="@drawable/bac"
        android:text="LIM"
        android:id="@+id/activity_my_user_msg_editor_Name"
        android:gravity="center"
        android:maxLength="10"
        android:ellipsize="end"
        android:textColor="@color/titlecolor3"
        android:textSize="@dimen/textSize14"
        android:layout_width="185dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="性别"
        android:id="@+id/activity_my_user_msg_textSex"
        android:textColor="@color/color6a"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_my_user_msg_editor_Name"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_below="@+id/activity_my_user_msg_textSex"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:text="男"
            android:gravity="center"
            android:textSize="@dimen/textSize15"
            android:textColor="@drawable/fragmenttop_qj_textcolor"
            android:background="@drawable/fragmenttop_qj"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:id="@+id/activity_my_user_msg_textSex_man"/>
        <TextView
            android:text="女"
            android:gravity="center"
            android:textSize="@dimen/textSize15"
            android:textColor="@drawable/fragmenttop_qj_textcolor"
            android:background="@drawable/fragmenttop_shebei"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:id="@+id/activity_my_user_msg_textSex_wenman"/>
    </LinearLayout>
</RelativeLayout>
