<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.home.wanyu.lzhView.MyRelayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:background="#00ffeeaa"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <com.home.wanyu.lzhView.MyTextView
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:focusable="false"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:hint="请输入密码"
                    android:textColorHint="@color/dinkwhite"
                    android:id="@+id/deviceSetting_lock_textV_psd"
                    android:background="@drawable/backgro"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="33dp" />
            <com.home.wanyu.myview.MyGridView
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/deviceSetting_lock_textV_psd"
                android:numColumns="3"
                android:id="@+id/deviceSetting_lock_gridView"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.home.wanyu.myview.MyGridView>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>