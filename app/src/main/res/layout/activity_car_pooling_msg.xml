<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_pooling_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.home.wanyu.activity.CarPoolingMsgActivity">

    <RelativeLayout
        android:id="@+id/order_msg_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/car_msg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@mipmap/property_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/car_pin"
            android:textColor="@color/title_color"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/e5e5e5" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_msg_title"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/car_msg_title_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <com.home.wanyu.myview.RoundImageView
                android:id="@+id/car_msg_head_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/car_msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/car_msg_head_img"
                android:text=""
                android:textColor="@color/title_color"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/car_msg_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/eac6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/car_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/car_msg_state"
                android:text=""
                android:textColor="@color/name_color"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/car_msg_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/car_msg_title_rl"
            android:background="@color/e5e5e5" />

        <RelativeLayout
            android:id="@+id/car_mag_content_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_msg_line"
            android:layout_marginBottom="50dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/car_msg_shen_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/car_shen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_shen"
                    android:textColor="@color/homeFragTopTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/car_shen_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/car_shen"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/titlecolor3"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_msg_time_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_msg_shen_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView

                    android:id="@+id/car_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_time"
                    android:textColor="@color/homeFragTopTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/car_time_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/car_time_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/titlecolor3"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_msg_start_address_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_msg_time_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView

                    android:id="@+id/car_start_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_start_address"
                    android:textColor="@color/homeFragTopTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/car_start_address_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/car_start_address_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/titlecolor3"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_end_address_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_msg_start_address_rl"
                android:layout_marginBottom="29dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">

                <TextView

                    android:id="@+id/car_end_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_end_address"
                    android:textColor="@color/homeFragTopTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/car_end_address_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/car_end_address_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/titlecolor3"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ScrollView
                android:id="@+id/my_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_end_address_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/f9f9f9"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--头像-->
                    <RelativeLayout
                        android:id="@+id/community_gridview_rl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/add_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.home.wanyu.myview.MyGridView
                            android:id="@+id/community_join_person_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/add_icon"
                            android:horizontalSpacing="5dp"
                            android:numColumns="7"
                            android:verticalSpacing="10dp">

                        </com.home.wanyu.myview.MyGridView>


                    </RelativeLayout>
                    <!--评论-->
                    <RelativeLayout
                        android:id="@+id/comment_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/community_gridview_rl">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentTop="true"
                            android:background="@color/ededed" />

                        <com.home.wanyu.myview.MyListView
                            android:id="@+id/car_msg_commend_listview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:divider="@color/f9f9f9"
                            android:dividerHeight="15dp"
                            android:scrollbars="none">

                        </com.home.wanyu.myview.MyListView>

                        <RelativeLayout
                            android:id="@+id/community_many_relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/car_msg_commend_listview"
                            android:layout_marginTop="5dp"
                            android:visibility="gone">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentTop="true"
                                android:background="@color/repair_line" />

                            <TextView
                                android:id="@+id/car_msg_footer_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:paddingBottom="15dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="20dp"
                                android:paddingTop="14dp"
                                android:text="加载更多"
                                android:textColor="@color/title_color"
                                android:textSize="13sp" />

                            <ProgressBar
                                android:id="@+id/car_msg_pbLocate"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/car_msg_footer_tv" />

                        </RelativeLayout>

                        <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="0.5dp"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:background="@color/repair_line" />-->
                    </RelativeLayout>

                </RelativeLayout>
            </ScrollView>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/car_msg_btn"
            android:layout_width="match_parent"
            android:layout_height="47.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/car_msg_comment_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/circle_white_msg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/car_msg_comment"
                        android:textColor="@color/title_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="47.5dp"
                    android:background="@color/bg_color" />

                <LinearLayout
                    android:id="@+id/car_msg_jiedan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/repair_line"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/car_jie"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_msg_join_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/join_img_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/community_add_no" />

                    <TextView
                        android:id="@+id/join_num_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@color/title_color"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_comment_box"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:background="@color/comment"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/comment_bg">

                <!--<ImageView-->
                <!--android:id="@+id/writing_img"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:src="@mipmap/writing" />-->

                <EditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="@string/comment_tv"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:textColor="@color/titlecolor3"
                    android:textColorHint="@color/name_color"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/comment_send_btn"
                android:layout_width="49dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:background="@color/circle_bg"
                android:gravity="center"
                android:text="@string/comment_send"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_data_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_msg_title"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:visibility="gone">

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />


        <ImageView
            android:id="@+id/no_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/nostatus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_img"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/no_data_author"
            android:textColor="@color/bg_rect"
            android:textStyle="italic" />
    </RelativeLayout>


</RelativeLayout>
