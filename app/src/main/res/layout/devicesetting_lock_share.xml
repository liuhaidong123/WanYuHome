<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:text="分享给"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize12"
            android:textColor="@color/titlecolor3"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="33dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/homefragmentFgColor"/>
            <com.home.wanyu.myview.MyListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:id="@+id/devicesetting_lock_share_listview"
                >
            </com.home.wanyu.myview.MyListView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/titlecolor3"
                        android:text="钥匙时限"
                        android:id="@+id/lockshare_btn_select_text"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:clickable="true"
                        android:layout_toRightOf="@+id/lockshare_btn_select_text"
                        android:gravity="center"
                        android:textSize="@dimen/textSize13"
                        android:text="选择"
                        android:textColor="@drawable/lock_text"
                        android:background="@drawable/lockshare_btn_select"
                        android:layout_width="85dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/lockshare_btn_select"/>
                </LinearLayout>
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="确定"
            android:gravity="center"
            android:id="@+id/lockshare_btn_submit"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btnbottom"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>