<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_community"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    tools:context="com.home.wanyu.activity.CommunityPostActivity">

    <RelativeLayout
        android:id="@+id/order_msg_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/community_post_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@mipmap/property_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/acti_2"
            android:textStyle="bold"
            android:textColor="@color/title_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/community_post_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/comment_send"
            android:textColor="@color/titlecolor3"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/two_ll"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_below="@+id/order_msg_title"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/community_start_ll"
            android:layout_width="165dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/community_post_time"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:textColor="@color/homeFragTopTextColor"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/community_end_ll"
            android:layout_width="165dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/community_post_time"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_time"
                android:textColor="@color/homeFragTopTextColor"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/two_ll"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:text="@string/prompt"
        android:textColor="@color/homeFragTopTextColor"
        android:textSize="14sp" />

    <View
        android:layout_below="@id/prompt"
        android:id="@+id/line_p_1"
        android:background="@color/e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/community_title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line_p_1"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/community_title"
            android:textColor="@color/name_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/community_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/title"
            android:background="@null"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/titlecolor3"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_below="@id/community_title_rl"
        android:id="@+id/line_p_2"
        android:background="@color/e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/community_address_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line_p_2"
        android:background="@color/white">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/community_address"
            android:textColor="@color/name_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/community_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/address"
            android:background="@null"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/titlecolor3"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_below="@id/community_address_rl"
        android:id="@+id/line_p_3"
        android:background="@color/e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/community_person_num_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line_p_3"
        android:background="@color/white">

        <TextView
            android:id="@+id/person_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            android:text="@string/community_person_num"
            android:textColor="@color/name_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/community_person_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/person_num"
            android:background="@null"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:maxLength="3"
            android:textColor="@color/titlecolor3"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_below="@id/community_person_num_rl"
        android:id="@+id/line_p_4"
        android:background="@color/e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/community_phone_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line_p_4"
        android:background="@color/white">

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/community_phone"
            android:textColor="@color/name_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/community_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/phone"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:textColor="@color/titlecolor3"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_below="@id/community_phone_rl"
        android:id="@+id/line_p_5"
        android:background="@color/e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/community_content_rl"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/line_p_5"
        android:background="@color/white">


        <EditText
            android:id="@+id/community_content_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="@string/community_content"
            android:maxLength="500"
            android:textColor="@color/titlecolor3"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_below="@id/community_content_rl"
        android:id="@+id/line_p_6"
        android:background="@color/e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/community_other_area_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line_p_6"
        android:background="@color/white">


        <ImageView
            android:id="@+id/community_on_off_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/circle_button_off" />


        <TextView
            android:id="@+id/other_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/community_on_off_btn"
            android:text="@string/circle_post_other_area"
            android:textColor="@color/titlecolor3"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
