<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="@color/titlecolor3"
        android:text="模式选择"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/textSize12"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgbac"/>
    <!--自动-->
    <RelativeLayout
        android:id="@+id/ari_modesetting_mode_auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/self_motion"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="自动"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgbac"/>
    <!--制冷-->
    <RelativeLayout
        android:id="@+id/ari_modesetting_mode_cold"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/cold"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="制冷"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgbac"/>
    <!--炙热-->
    <RelativeLayout
        android:id="@+id/ari_modesetting_mode_hot"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/hot"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="制热"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgbac"/>
    <!--除湿-->
    <RelativeLayout
        android:id="@+id/ari_modesetting_mode_wet"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/wet"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="除湿"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgbac"/>

    <!--送风-->
    <RelativeLayout
        android:id="@+id/ari_modesetting_mode_wind"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/wind"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize15"
                android:text="送风"
                android:layout_marginLeft="8dp"
                android:textColor="@color/titlecolor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/homefragmentFgbac"/>
</LinearLayout>