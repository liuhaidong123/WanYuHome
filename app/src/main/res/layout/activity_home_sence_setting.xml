<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:id="@+id/home_sence_setting_layout"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="25dp">
                <!--情景名称-->
                <RelativeLayout
                    android:id="@+id/home_sence_scene_rela_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/home_sence_scene_rela_textv"
                        android:textSize="@dimen/textSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/titlecolor3"
                        android:text="情 景 名 称"/>
                    <EditText
                        android:maxLength="6"
                        android:id="@+id/home_sence_scene_rela_eidtext"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:textColor="@color/titlecolor3"
                        android:textSize="@dimen/textSize14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/activity_homescene_editext"
                        android:layout_toRightOf="@+id/home_sence_scene_rela_textv"/>
                </RelativeLayout>

                <!--启动条件-->
                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/home_sence_scene_rela_name"
                    android:id="@+id/home_sence_scene_rela_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/home_sence_scene_rela_condition_textv"
                        android:textSize="@dimen/textSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/titlecolor3"
                        android:text="启 动 条 件"/>
                    <RelativeLayout
                        android:id="@+id/home_sence_scene_rela_condition_relaLayout"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/home_sence_scene_rela_condition_textv"
                        android:background="@drawable/activity_homescene_editext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/home_sence_scene_rela_condition_textv_name"
                            android:text="一键启动"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:maxLines="1"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/home_sence_scene_rela_condition_imageselect"
                            android:layout_centerVertical="true"
                            android:textColor="@color/titlecolor3"
                            android:textSize="@dimen/textSize14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <ImageView
                            android:id="@+id/home_sence_scene_rela_condition_imageselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/activity_homescene_imageselect"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:text="执 行 任 务"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/titlecolor3"
                    android:textSize="@dimen/textSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.home.wanyu.myview.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:dividerHeight="1dp"
                    android:divider="#e9e9e9"
                    android:layout_above="@+id/home_sence_bottomlayout"
                    android:background="@color/white"
                    android:id="@+id/home_sence_listview">
                </com.home.wanyu.myview.MyListView>

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:background="#e9e9e9"/>-->
                    <RelativeLayout
                        android:id="@+id/activity_homeSceneSetting_rela_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:id="@+id/activity_homeSceneSetting_listitem_rela_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/add2"/>

                        <TextView
                            android:id="@+id/activity_homeSceneSetting_listitem_rela_textSetting"
                            android:text="添加"
                            android:textColor="@color/homeFragChangeColor"
                            android:textSize="@dimen/textSize13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/activity_homeSceneSetting_listitem_rela_image" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/home_sence_bottomlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp">
                    <TextView
                        android:id="@+id/home_sence_bottomSubmit"
                        android:textSize="17sp"
                        android:text="确定"
                        android:layout_centerInParent="true"
                        android:background="@drawable/activity_homescene_setting_submit"
                        android:textColor="@color/white"
                        android:layout_width="190dp"
                        android:gravity="center"
                        android:layout_height="44dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>