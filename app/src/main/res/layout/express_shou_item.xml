<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/express_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/express_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/express_img"
            android:text=""
            android:textColor="@color/titlecolor3"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/express_phone"
            android:layout_width="63.5dp"
            android:layout_height="63.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/express_phone" />

        <View
            android:layout_width="1dp"
            android:layout_height="66dp"
            android:layout_toLeftOf="@id/express_phone"
            android:background="@color/bg_color"

            />
    </RelativeLayout>
</RelativeLayout>