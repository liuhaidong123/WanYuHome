<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_setting_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homefragmentFgColor"
    tools:context="com.home.wanyu.activity.DeviceSettingLightActivity">
    <LinearLayout
        android:id="@+id/deviceSetting_light_linearLayout"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">
        <ImageView
            android:id="@+id/deviceSetting_light_image"
            android:layout_centerInParent="true"
            android:src="@mipmap/lightbigz"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="170dp"
            android:layout_height="170dp" />
        <com.home.wanyu.lzhView.SwitchButton
            android:checked="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/deviceSetting_light_switch"/>
    </LinearLayout>
    <RelativeLayout
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/c_homescene_griditem"
        android:layout_below="@+id/deviceSetting_light_linearLayout">
        <TextView
            android:id="@+id/deviceSetting_light_textv"
            android:textSize="@dimen/textSize14"
            android:textColor="@color/titlecolor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亮度调节"/>
       <com.home.wanyu.lzhView.MySeekBar
           android:layout_marginTop="10dp"
           android:layout_below="@+id/deviceSetting_light_textv"
           android:id="@+id/deviceSetting_light_mySeekbar"
           android:layout_width="match_parent"
           android:layout_height="20dp" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/deviceSetting_light_mySeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/darkz"
                    android:id="@+id/imageView2" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/name_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize14"
                    android:text="暗"/>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_gravity="center_vertical"
                   android:layout_marginRight="5dp"
                    android:textColor="@color/name_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize14"
                    android:text="亮"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/brightz"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
