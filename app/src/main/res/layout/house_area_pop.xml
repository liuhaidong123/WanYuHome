<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f8f9fa"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/area_nearby_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="附近"
            android:textColor="@color/titlecolor3"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/f3f3f3" />

        <TextView
            android:id="@+id/area_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="区域"
            android:textColor="@color/titlecolor3"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/f3f3f3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/area1_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/f8f9fa"
        android:visibility="gone">

        <ListView
            android:id="@+id/area_listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/f3f3f3"
            android:dividerHeight="0.5dp"
            android:scrollbars="none">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/area2_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/f5f5f5"
        android:visibility="gone">

        <ListView
            android:id="@+id/area_listview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/f3f3f3"
            android:dividerHeight="0.5dp"
            android:scrollbars="none">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/km_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/f5f5f5"
        android:visibility="gone">

        <ListView
            android:id="@+id/km_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/f3f3f3"
            android:dividerHeight="0.5dp"
            android:scrollbars="none">

        </ListView>
    </LinearLayout>

</LinearLayout>