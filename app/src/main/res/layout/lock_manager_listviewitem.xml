<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/lockshare_btn_select">
        <com.home.wanyu.myview.RoundImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@mipmap/it1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/lockmanager_listitem_image"/>
            <TextView
                android:textSize="@dimen/textSize14"
                android:textColor="@color/titlecolor3"
                android:text="LIU"
                android:maxLength="15"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lockmanager_listitem_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lockmanager_listitem_name"/>
        <TextView
            android:textSize="@dimen/textSize14"
            android:textColor="@color/titlecolor3"
            android:text="家人"
            android:maxLength="15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lockmanager_listitem_nick"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/lockmanager_listitem_image"
                android:layout_below="@+id/lockmanager_listitem_name">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="钥匙时限"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lockmanager_text1"
                    android:textColor="@color/titlecolor3"
                    android:textSize="@dimen/textSize12"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="07/19 14:00 一 07/21 15:00"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lockmanager_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lockmanager_lockTime"
                    android:textColor="@color/titlecolor3"
                    android:textSize="@dimen/textSize12"/>
               <ImageView
                   android:layout_alignParentRight="true"
                   android:src="@mipmap/order_address_edit"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:layout_centerVertical="true"
                   android:id="@+id/lockmanager_imageEdit"/>
            </RelativeLayout>
    </RelativeLayout>

</LinearLayout>