<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_house_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/homefragmentFgColor"
    tools:context="com.home.wanyu.activity.MyHouseInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/banck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <!--姓名-->
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="我的姓名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#333333"/>
            <EditText
                android:id="@+id/my_address_name"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#b4b4b4"
                android:paddingLeft="19dp"
                android:hint="姓名"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
        <!--电话-->
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="联系电话"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#333333"/>
            <EditText
                android:id="@+id/my_address_phoneNum"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp"
                android:textColor="#b4b4b4"
                android:paddingLeft="13dp"
                android:hint="11位手机号码"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
        <!--身份-->
        <LinearLayout
            android:id="@+id/my_house_info_shenfen"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="我         是"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#333333"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/my_address_postCode"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="业主"
                    android:paddingLeft="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/bg_rect"/>
            </RelativeLayout>

        </LinearLayout>
        <!--省市区地址-->
        <RelativeLayout
            android:id="@+id/my_address_layout_selectAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="选择地址"
                android:id="@+id/my_address_selectAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:layout_toRightOf="@+id/my_address_selectAddress"
                android:layout_marginLeft="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/my_address_imageAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/my_address_imageAdress"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/sele"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:id="@+id/my_address_addressSelect"
                    android:gravity="center_vertical"
                    android:text="河北省 保定市 涿州市"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/sele"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/bg_rect"/>
            </RelativeLayout>


        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
        <!--详细地址-->
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="详细地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#333333"
                android:id="@+id/textView4" />

            <EditText
                android:maxLength="100"
                android:id="@+id/my_address_addressinfo"
                android:background="@null"
                android:gravity="top"
                android:textSize="14sp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textColor="#b4b4b4"
                android:paddingLeft="13dp"
                android:lineSpacingExtra="5dp"
                android:hint="填写您的详细街道／小区／门牌号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
    </LinearLayout>
</RelativeLayout>
