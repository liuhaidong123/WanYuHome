<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bg_rect</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryWhiteDark</item>
        <item name="colorAccent">@color/colorAccentWhite</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="textHighLight">@color/black</item>
        <item name="textNormal">@color/dark_gray</item>
        <item name="textWeak">@color/gray</item>
        <item name="appBackGround">@color/appBlue</item>
    </style>

    <style name="GrayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGrayDark</item>
        <item name="colorAccent">@color/colorAccentGray</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="textHighLight">@color/white</item>
        <item name="textNormal">@color/white_gray</item>
        <item name="textWeak">@color/gray</item>
        <item name="appBackGround">@color/appBlue</item>
    </style>


    <style name="text_center">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_big_center" parent="text_center">
        <item name="android:textColor">?attr/textHighLight</item>
        <item name="android:textSize">@dimen/sp_big_i</item>
    </style>

    <style name="text_middle_center" parent="text_center">
        <item name="android:textColor">?attr/textHighLight</item>
        <item name="android:textSize">@dimen/sp_middle_i</item>
    </style>

    <!--弹窗样式-->
    <style name="popup2_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop3_in</item>
        <item name="android:windowExitAnimation">@anim/pop3_out</item>
    </style>
    <!--弹窗样式-->
    <style name="popup3_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop2_in</item>
        <item name="android:windowExitAnimation">@anim/pop2_out</item>
    </style>
    <!--弹窗样式-->
    <style name="popup4_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop4_in</item>
        <item name="android:windowExitAnimation">@anim/pop4_out</item>
    </style>
    <!--弹窗样式-->
    <style name="popup1_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop1_in</item>
        <item name="android:windowExitAnimation">@anim/pop1_out</item>
    </style>

    <declare-styleable name="CircleView">
        <attr name="strokeWidth" format="dimension"></attr>
        <attr name="title" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="switchButton">
        //开关的宽度（长度是宽度的3倍）
        <attr name="buttonHeight" format="float"></attr>
        //开关的默认状态
        <attr name="state" format="boolean"></attr>
        //关闭时底部的颜色
        <attr name="bottomColor_false" format="color"></attr>
        //开启时底部的颜色
        <attr name="bottomColor_true" format="color"></attr>
        //
        <attr name="text_false" format="color"></attr>
        <attr name="text_true" format="color"></attr>
        <attr name="ballColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
    </declare-styleable>


    <declare-styleable name="switchBtn">
        //高度
        <attr name="switchHeight" format="dimension"></attr>
        //圆球颜色
        <attr name="ballCo" format="color"></attr>
        <attr name="sta" format="boolean"></attr>
        //字体的颜色和大小
        <attr name="switch_textSize" format="dimension"></attr>
        <attr name="switch_textColor" format="color"></attr>
        //开启闭合的颜色
        <attr name="switch_false" format="color"></attr>
        <attr name="switch_true" format="color"></attr>
    </declare-styleable>


    <!--数据请求动画-->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
